{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://syllabus-to-calendar.onrender.com/api/$1"
    },
    {
      "src": "/health",
      "dest": "https://syllabus-to-calendar.onrender.com/health"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://syllabus-to-calendar.onrender.com"
  }
}
